{
  "name": "utags-advanced-filter",
  "displayName": "UTags Advanced Filter",
  "displayName:zh-CN": "UTags Advanced Filter",
  "version": "0.0.4",
  "description": "Real-time filters for list items on any website. Hides items that don't match your criteria, without reloading the page.",
  "description_userscript": "Real-time filters for list items on any website. Hides items that don't match your criteria, without reloading the page. Supports Greasy Fork and will support more sites via rules.",
  "description_userscript:zh-CN": "对网站的列表内容进行实时过滤与隐藏。无需刷新页面，即时隐藏不符合条件的条目。已支持 Greasy Fork，将通过规则适配更多站点。",
  "author": "Pipecraft",
  "namespace": "https://github.com/utags",
  "icon": "https://wsrv.nl/?w=128&h=128&url=https%3A%2F%2Fraw.githubusercontent.com%2Futags%2Futags-advanced-filter%2Frefs%2Fheads%2Fmain%2Fassets%2Ficon.png",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/utags/utags-advanced-filter/issues"
  },
  "homepage": "https://github.com/utags/utags-advanced-filter#readme",
  "scripts": {
    "postinstall": "node scripts/patch.js",
    "p": "prettier --write .",
    "lint": "run-s lint:*",
    "lint:code": "prettier --write . && xo --fix",
    "lint:type": "tsc --noemit",
    "dev": "run-p dev:*",
    "dev:chrome": "plasmo dev",
    "dev:firefox": "sleep 2 && plasmo dev --target=firefox-mv3",
    "dev:userscript": "node scripts/userscript/watch.mjs",
    "staging": "run-p staging:*",
    "staging:userscript": "node scripts/userscript/build.mjs --staging && pnpm prettier --log-level warn --write build/userscript-staging/ && http-server build/userscript-staging/ -o",
    "build": "run-s build:*",
    "build:chrome": "plasmo build && node scripts/chrome/update-manifest.mjs",
    "build:firefox": "plasmo build --target=firefox-mv3 && node scripts/firefox/update-manifest.mjs && addons-linter build/firefox-mv3-prod/",
    "build:userscript": "node scripts/userscript/build.mjs && pnpm prettier --log-level warn --write build/userscript-prod/",
    "package": "run-s package:*",
    "package:chrome": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv3",
    "test": "echo test"
  },
  "dependencies": {
    "browser-extension-i18n": "^0.1.3",
    "browser-extension-settings": "^0.6.4",
    "browser-extension-storage": "^0.1.2",
    "browser-extension-utils": "^0.2.2",
    "lucide": "^0.554.0",
    "plasmo": "^0.90.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/chrome": "^0.1.29",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "addons-linter": "^9.1.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "esbuild": "^0.27.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "postcss": "^8.4.49",
    "sass": "^1.94.0",
    "typescript": "^5.2.2",
    "vitest": "^4.0.6",
    "xo": "^0.60.0"
  },
  "manifest": {
    "host_permissions": [],
    "permissions": [
      "storage"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{58c86a40-f58e-4038-ad03-fe5b8cc6e3a9}",
        "data_collection_permissions": {
          "required": [
            "none"
          ]
        }
      }
    }
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "globals": [
      "document"
    ],
    "rules": {
      "import/extensions": 0,
      "n/file-extension-in-import": 0,
      "import/order": 0,
      "@typescript-eslint/prefer-nullish-coalescing": 0,
      "@typescript-eslint/prefer-optional-chain": 0,
      "logical-assignment-operators": 0,
      "unicorn/prevent-abbreviations": 0,
      "capitalized-comments": 0
    },
    "overrides": [
      {
        "files": "postcss.config.js",
        "rules": {
          "unicorn/prefer-module": 0
        }
      },
      {
        "files": "src/messages/*.ts",
        "rules": {
          "@typescript-eslint/naming-convention": 0
        }
      }
    ],
    "ignores": [
      "scripts/patch.js",
      "build/**/*"
    ]
  }
}
